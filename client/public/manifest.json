{
  "name": "AniGuide - Anime Discovery & Reviews",
  "short_name": "AniGuide",
  "description": "Discover trending anime, read reviews, and track your favorite series",
  "start_url": "/",
  "scope": "/",
  "serviceworker": {
    "src": "/sw-production.js",
    "scope": "/",
    "update_via_cache": "none"
  },
  "display": "standalone",
  "background_color": "#06070E",
  "theme_color": "#9C0D38",
  "orientation": "portrait-primary",
  "icons": [
    {
      "src": "icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "categories": ["entertainment", "lifestyle"],
  "lang": "en",
  "screenshots": [
    {
      "src": "/screenshots/mobile-discover.png",
      "sizes": "540x720", 
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Discover trending anime"
    },
    {
      "src": "/screenshots/desktop-browse.png",
      "sizes": "1024x768",
      "type": "image/png", 
      "form_factor": "wide",
      "label": "Desktop anime browsing experience"
    }
  ],
  "shortcuts": [
    {
      "name": "Trending",
      "short_name": "Trending",
      "description": "View trending anime",
      "url": "/?filter=trending",
      "icons": [
        {
          "src": "/icons/trending.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "Search",
      "short_name": "Search", 
      "description": "Search for anime",
      "url": "/?search=true",
      "icons": [
        {
          "src": "/icons/search.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "Popular",
      "short_name": "Popular",
      "description": "View popular anime", 
      "url": "/?filter=popular",
      "icons": [
        {
          "src": "/icons/popular.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    }
  ],
  "id": "/",
  "display_override": ["window-controls-overlay", "standalone"],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "related_applications": [],
  "prefer_related_applications": false
}
